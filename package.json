{
  "name": "repaste",
  "productName": "REpaste",
  "version": "0.0.0",
  "description": "A minimalistic cross-platform clipboard manager",
  "license": "MIT",
  "repository": "mrbrist/repaste",
  "author": {
    "name": "mrbrist",
    "email": "brist@mrbrist.com",
    "url": "github.com/mrbrist/repaste"
  },
  "scripts": {
    "lint": "standard --fix",
    "start": "electron .",
    "build": "build"
  },
  "dependencies": {
    "electron-debug": "^3.0.0",
    "electron-positioner": "^4.1.0"
  },
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "^5.0.2",
    "electron-builder": "^20.43.0",
    "standard": "^12.0.1"
  },
  "build": {
    "appId": "com.repaste.app",
    "copyright": "Copyright Â© 2019 mrbrist",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities",
      "type": "distribution"
    },
    "dmg": {
      "iconSize": 160,
      "iconTextSize": 12,
      "window": {
        "width": 660,
        "height": 400
      },
      "contents": [{
          "x": 180,
          "y": 170,
          "type": "file"
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "pkg": {
      "license": "LICENSE"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "license": "LICENSE",
      "warningsAsErrors": false
    },
    "publish": {
      "provider": "github",
      "owner": "mrbrist",
      "releaseType": "release",
      "publishAutoUpdate": true
    }
  }
}
